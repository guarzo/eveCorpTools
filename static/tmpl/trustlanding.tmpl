{{ define "landing" }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ .Title }}</title>
    <link rel="icon" href="/static/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/static/css/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.2/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-gray-200 font-sans min-h-screen flex flex-col">
    <div class="flex flex-col flex-grow">
        <!-- Header -->
        <header class="bg-teal-700 text-yellow-400 py-6">
            <div class="container mx-auto flex items-center justify-center px-4">
                <h1 class="text-3xl font-bold">{{ .Title }}</h1>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-grow container mx-auto flex items-center justify-center px-4 py-6">
            <a href="/login" class="block" title="Login with Eve SSO">
                <img src="/static/images/eve-sso.png" alt="Login with Eve SSO" class="w-64 h-auto">
            </a>
        </main>

        <!-- Footer -->
        <footer class="bg-teal-700 text-yellow-400 py-6">
            <div class="container mx-auto text-center">
                <p class="text-3xl font-semibold">
                    Designed for <img src="/static/images/new_logo.png" alt="Zoolanders Logo" class="inline-block h-10 ml-2">
                </p>
            </div>
        </footer>
    </div>
</body>
</html>
{{ end }}
